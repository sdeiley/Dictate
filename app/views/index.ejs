<% include partials/header %>

<div id="view">
    <div id="header">
        <h1>Dictate Lifting</h1>
    </div>
    <div id="container">
        <% if (!user) { %>
            <div id="tabs">
                <button id="signButton">Sign Up</button>
                <button id="logButton">Login</button>
            </div>
        <% } else { %>
            <h2>Hello <%=user %>!</h2>
            <div id="tabs">
                <button id="logoutButton" action="/logout">Logout</button>
            </div>
        <% } %>  
        <div id="panel">
            <div id="login">
                <form action="/login" method="post">
                    <input for="username" type="text" name="username" placeholder="username">
                    <input for="password" type="password" name="password" placeholder="password">
                    <input type="submit" value="Log In">
                </form>
            </div>
            <div id="signup">
                <form action="/register" method="post">
                    <input for="name" type="text" name="name" placeholder="name">
                    <input for="username" type="text" name="username" placeholder="username">
                    <input for="password" type="password" name="password" placeholder="password">
                    <input for="email" type="text" name="email" placeholder="email">
                    <input type="submit" value="Register">
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-2.2.4.min.js" defer="defer"></script>
<script src="/js/index.js" defer="defer"></script>

<% include partials/footer %>